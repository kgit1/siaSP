	<table>
		<tr>
			<th>ID</th>
			<th>UserName</th>
			<th>FullName</th>
			<th>Age</th>
			<th>Creation/Update</th>
			<th>UPDATE</th>
			<th>DELETE</th>
			<th>INFO</th>
		</tr>

		<!-- foreach iterator which will iterate through list "spitters" 
		sended by adding attribute to model 
		items="${spitters} <- customers name from MVC theModel-->
